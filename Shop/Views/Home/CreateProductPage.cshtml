@model dynamic
@using Shop.Models
@using Microsoft.AspNetCore.Identity
@using Shop.Areas.Identity.Data
@inject UserManager<ShopUser> UserManager


<div class="CreteProduct">
<form method="post" asp-controller="Home" asp-action="CreateProduct" enctype="multipart/form-data">
 <div class="CreateProductForm">
<label for="Name">Name</label>
             <input type="text"  name="Name" id="Name" required minlength="6"/>
              <label for="Price">Price</label>
             <input type="text" name="Price" id="Price"  required/>
             <label for="Amount">Amount</label>
             <input type="text" name="Amount" id="Amount"  required/>
      <input type="hidden" name="Category" value="@Model.Category.Id"/>
             <input type="hidden" name="TypeId" value="@Model.Type.Id"/>
               @foreach(var item in Model.Pro){
                if (item.TypeId == Model.Type.Id)
                {
                        <label>@item.Title</label>
                        <input type="text" name="Titels" required/>
                        <input type="hidden" name="TitelsId" value="@item.Id">
                }
             }
      <input type="file" value="Product photo" name="photos" multiple required />
      <input type="hidden" value="@UserManager.GetUserId(User)" name="userId"/>
    <button type="submit">Submit</button>
    <div>
</form>
</div>
