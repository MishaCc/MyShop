@model dynamic




<form method="post" asp-controller="Home" asp-action="CreateProduct" enctype="multipart/form-data">
        <table>
            <thead></thead>
            <tbody>
               @foreach(var item in Model.Pro){
                if (item.TypeId == Model.Type.Id)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td><input type="text" name="Titels"/></td>
                        <td><input type="hidden" name="TitelsId" value="@item.Id"></td>
                    </tr>
                }
             }
            </tbody>
        </table>
              <label for="Name">Name</label>
             <input type="text" name="Name" id="Name"/>
              <label for="Price">Price</label>
             <input type="text" name="Price" id="Price"/><br />
             <label for="Amount">Amount</label>
             <input type="text" name="Amount" id="Amount"/>
             <input type="hidden" name="Category" value="@Model.Category.Id"/>
             <input type="hidden" name="TypeId" value="@Model.Type.Id"/>
             <input type="file" value="Product photo" name="photos" multiple/>
             <button type="submit">Submit</button>
</form>
